# NeurAnt - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =================================
# SUPABASE CONFIGURATION
# =================================
# Get these values from your Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =================================
# APPLICATION ENVIRONMENT
# =================================
# Environment: development | preview | production
NEXT_PUBLIC_APP_ENV=development

# Application URL (used for OAuth redirects, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application metadata
NEXT_PUBLIC_APP_NAME=NeurAnt
NEXT_PUBLIC_APP_VERSION=1.0.0

# =================================
# NODE.JS ENVIRONMENT
# =================================
# Node environment (development | production)
NODE_ENV=development

# Disable Next.js telemetry (optional)
NEXT_TELEMETRY_DISABLED=1

# =================================
# EXTERNAL INTEGRATIONS (Future)
# =================================
# OpenAI API Key (for LLM features)
OPENAI_API_KEY=sk-...

# n8n Webhook URL (for workflow automation)  
N8N_WEBHOOK_URL=https://your-workflow.app.n8n.cloud/webhook/

# Google OAuth (for Google integrations)
GOOGLE_CLIENT_ID=your-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =================================
# DEVELOPMENT TOOLS (Optional)
# =================================
# Sentry DSN (for error monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# =================================
# ENVIRONMENT-SPECIFIC NOTES
# =================================
# Development: Use DEV Supabase project
# Preview: Use DEV Supabase project with preview URL
# Production: Use PROD Supabase project with production URL

